@model IEnumerable<GigHub.Models.Gig>

@{
    ViewBag.Title = "Mine";
}

<h2>My Upcoming Gigs</h2>


<ul class="gigs voffset3">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Venue
                   <button data-followee-id="@gig.ArtistId" class="js-toggle-following btn btn-link btn-sm pull-right">Follow</button>
                    }
                </span>

                <span class="genre">
                    @gig.Genre.Name
                </span>
              
            </div>
        </li>
    }
</ul>
